<!DOCTYPE html>
<html ng-app="pos">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("POS", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Role", "Index", "Role")</li>
                    <li>@Html.ActionLink("User", "Index", "User")</li>
                    <li>@Html.ActionLink("Country", "Index", "Country")</li>
                    <li>@Html.ActionLink("Division", "Index", "Division")</li>
                    <li>@Html.ActionLink("Township", "Index", "Township")</li>
                    <li>@Html.ActionLink("Location", "Index", "Location")</li>
                    <li>@Html.ActionLink("Customer", "Index", "Customer")</li>
                    <li>@Html.ActionLink("Supplier", "Index", "Supplier")</li>
                    <li>@Html.ActionLink("Category", "Index", "Category")</li>
                    <li>@Html.ActionLink("Sub Category", "Index", "SubCategory")</li>
                    <li>@Html.ActionLink("Products", "Index", "Products")</li>
                    <li>@Html.ActionLink("Receiving", "Index", "Receiving")</li>
                    <li>@Html.ActionLink("In Stock", "Index", "InStock")</li>
                </ul>
                @*@Html.Partial("_LoginPartial")*@
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    
    @RenderSection("scripts", required: false)

    @Scripts.Render("~/Scripts/angularjs/angular.min.js")
    @Scripts.Render("~/Scripts/angularjs/angular-route.min.js")
    @Scripts.Render("~/Scripts/angularjs/angular-cookie.js")
    @Scripts.Render("~/Scripts/angularjs/ui-bootstrap-tpls-0.2.0.js")
    @Scripts.Render("~/Scripts/app/config.js")
    @Scripts.Render("~/Scripts/app/services/restservices.js")
    @Scripts.Render("~/Scripts/app/controllers/controllers.js")

</body>
</html>
